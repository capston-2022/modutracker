<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F2EA"
    android:backgroundTint="#F4F2EA"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="87dp"
        android:layout_height="80dp"

        android:layout_marginTop="132dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/icon"
        app:layout_constraintBottom_toTopOf="@+id/nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="Jerry"
        android:textColor="#603813"

        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/group_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        />

    <TextView
        android:id="@+id/group_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="75dp"

        android:text="goup_code"
        android:textColor="#E4B3B3"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_code"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btn_group"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:background="@drawable/edge"

            android:text="    그룹"
            android:textAlignment="viewStart"

            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_theme"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/edge"
            android:text="    테마"

            android:textAlignment="viewStart"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_push"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:background="@drawable/edge"

            android:text="    알림 설정"
            android:textAlignment="viewStart"

            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_secession"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/edge"
            android:text="    회원 탈퇴"

            android:textAlignment="viewStart"
            android:textColor="#000000" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>